{
  "name": "cleanfinding-browser-desktop",
  "productName": "CleanFinding Browser",
  "version": "1.5.0",
  "description": "Privacy-focused, family-safe browser for Windows, macOS, and Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "browser",
    "privacy",
    "tracker-blocking",
    "family-safe",
    "duck-player",
    "email-protection"
  ],
  "author": {
    "name": "CleanFinding",
    "email": "support@cleanfinding.com",
    "url": "https://cleanfinding.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MyRechargeHub1/cleanfinding-browser.git"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.cleanfinding.browser",
    "productName": "CleanFinding Browser",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "!src/**/*.{ts,map}",
      "../shared/privacy-handlers/**/*"
    ],
    "extraResources": [
      {
        "from": "../shared/privacy-handlers",
        "to": "privacy-handlers"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CleanFinding Browser"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/",
      "category": "Network",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
