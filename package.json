{
  "name": "cleanfinding-browser",
  "version": "1.0.0",
  "description": "CleanFinding Secure Browser - Privacy-focused, family-safe web browser",
  "main": "main.js",
  "author": {
    "name": "CleanFinding",
    "email": "support@cleanfinding.com"
  },
  "license": "MIT",
  "homepage": "https://cleanfinding.com",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.cleanfinding.browser",
    "productName": "CleanFinding Browser",
    "copyright": "Copyright Â© 2025 CleanFinding",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "lib/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "publisherName": "CleanFinding"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CleanFinding Browser"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    }
  }
}
